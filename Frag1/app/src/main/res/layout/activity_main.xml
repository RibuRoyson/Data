<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="3.0">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:name="com.example.imrokraft.frag1.MainActivity$MyFragment1"
        tools:layout="@layout/fragment_1"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:name="com.example.imrokraft.frag1.MainActivity$MyFragment2"
        tools:layout="@layout/fragment_2"/>




</LinearLayout>
