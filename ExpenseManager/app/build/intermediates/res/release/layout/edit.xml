<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4.5"
    android:background="@drawable/abcd">

    <LinearLayout
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center"
            android:text="Enter the ID"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2AEC07" />

        <EditText
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="vertical" >

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="editdetails"
            android:text="Submit"
            android:layout_gravity="right"
            android:textColor="#C00808" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/expensetxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center"
            android:text="Expense:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2AEC07" />

        <EditText
            android:id="@+id/expet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/cattxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center"
            android:text="Category:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2AEC07" />

        <EditText
            android:id="@+id/catet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/destxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center"
            android:text="Description:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2AEC07" />

        <EditText
            android:id="@+id/deset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/timetxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center"
            android:text="Time:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2AEC07" />

        <EditText
            android:id="@+id/timeet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/datetxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center"
            android:text="Date:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2AEC07" />

        <EditText
            android:id="@+id/dateet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:onClick="viewdata"
            android:text="View"
            android:textColor="#C00808" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:onClick="updatedata"
            android:text="Update"
            android:textColor="#C00808" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.50">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pluss"
            android:onClick="plus"/>

        </LinearLayout>

</LinearLayout><!-- From: file:/home/imrokraft/AndroidStudioProjects/ExpenseManager/app/src/main/res/layout/edit.xml -->