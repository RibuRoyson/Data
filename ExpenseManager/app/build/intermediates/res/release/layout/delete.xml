<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/abcd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Enter the id "
            android:textColor="#2AEC07"
            android:gravity="center"
            android:layout_weight="0.40" />

        <EditText
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/deleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="deleteDetails"
            android:text="Delete"
            android:layout_gravity="right"
            android:textColor="#C00808" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/imrokraft/AndroidStudioProjects/ExpenseManager/app/src/main/res/layout/delete.xml -->